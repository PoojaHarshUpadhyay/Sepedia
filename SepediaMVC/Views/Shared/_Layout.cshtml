<body>            
   
    <div class="topnav container" style="padding-left:0px !important">
        <a class="active" href="#home">Home</a>
        <a href="#news">Documentation</a>
        <a href="#contact">FAQ</a>
        <a href="#about">About</a>
        <div class="search-container fright">
            <form action="#">
                <input type="text" placeholder="Search.." name="search">
                <button type="submit"><i class="fa fa-search"></i></button>
            </form>
        </div>
        <a href="#login" style="float:right">Login</a>
    </div>
    <div id="list">
        @RenderSection("list")
    </div> 
    <div class="container" style="padding-left:0px !important">
        <div id="content" class="container body-content sp-body">
            <div>
                <header id="header">
                    @RenderSection("header")
                </header>
            </div>
            @RenderBody()
        </div>
    </div> 
      
      
        <div>
            <footer id="footer">
                <p>&copy; @DateTime.Now.Year - SEPedia. All rights reserved.</p>
